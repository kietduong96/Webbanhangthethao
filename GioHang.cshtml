@using WebBanDoTheThao.Models;
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="ThongTinGioHang">
    <h2 style="text-align:center; color:white" >THÔNG TIN GIỎ HÀNG</h2>
</div>

<table align="center" border="1" style="color:white">
    <tr style="text-align:center; font-weight:bold">
        <td > Mã sản phẩm </td>
        <td > Tên sản phẩm </td>
        <td > Ảnh bìa </td>
        <td > Số lượng </td>
        <td > Đơn giá </td>
        <td > Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach(var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMaSP </td>
                <td> @item.sTenSP </td>
                <td><img src="~/HinhAnh/@item.sAnhBia" width="150" height="150"></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMasp = item.iMaSP }))
                {
                    <td>
                        <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong" style="background-color:green" />
                    </td>
                    <td> @String.Format("{0:0,0}", item.dDonGia) </td>
                    <td> @String.Format("{0:0,0}", item.dThanhTien) </td>
                    <td><a href="@Url.Action("Details","SportStore", new { id = item.iMaSP})"> Chi tiết</a></td>
                    <td> @Html.ActionLink("Xóa", "XoaGioHang", new { @iMasp = item.iMaSP })</td>
                    <td style="color:green"><input type="submit" value="Cập Nhật" /></td>
                }
                
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:white">
        <td colspan="4"> Số lượng sản phẩm: @ViewBag.TongSoLuong</td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}",ViewBag.TongTien) VNĐ </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatCaGioHang")
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:center">
        <td colspan="9">
            @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
        </td>
    </tr>

</table>

<style>
    @*CSS cho div ThongTinGioHang*@
    .ThongTinGioHang{
        background-color: forestgreen;
        text-align:center;     
        padding: 10px;
    }
</style>
