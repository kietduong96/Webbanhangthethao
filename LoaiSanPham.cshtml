@model IEnumerable<WebBanDoTheThao.Models.LOAISANPHAM>
<div class="SanPham">
    <h3><p class="lead" style="color: white"> SẢN PHẨM</p></h3>
</div>
<div class="list-group">
    @foreach (var item in Model)
    {
        <a href="@Url.Action("SPTheoLoai","SportStore", new { id = item.MaLoai })" class="list-group-item">
            @item.TenLoai
        </a>
        
    }
</div>

@*CSS cho Menu SẢN PHẨM*@
<style>
    .SanPham {
        background-color: forestgreen;
        text-align: center;
        padding: 10px;
    }
</style>