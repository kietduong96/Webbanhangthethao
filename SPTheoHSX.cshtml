@*@model IEnumerable<WebBanDoTheThao.Models.SANPHAM>*@

@using WebBanDoTheThao.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SANPHAM>
@{
    ViewBag.Title = "SPTheoHSX";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="TheoHSX">
    <h3 style="text-align:center; color:white"> SẢN PHẨM THEO HẢNG SẢN XUẤT</h3>
</div>
<div class="row">
    @foreach (var sanpham in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <a href="@Url.Action("Details", "SportStore", new{id = sanpham.MaSP})">
                    <img src="~/HinhAnh/@sanpham.AnhBia" alt="@sanpham.TenSP" width="100"/>
                    <div>                       
                        <br />
                        <h4 style="text-align:center">                                                      
                            @sanpham.TenSP                                                                
                        </h4>
                        <p><h4 style="color:red;text-align:center">@sanpham.GiaBan VND</h4></p>
                    </div>
                    <div class="ratings">
                        <p class="pull-right">15 reviews</p>
                        <p>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                            <span class="glyphicon glyphicon-star"></span>
                        </p>
                    </div>
            </div>
        </div>
    }
</div>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("SPTheoHSX", new { page = page }))
</div>
<style>
    @*CSS cho MenuTrang*@
    .MenuTrang li {
        display: inline;
    }

    @*CSS cho Div TheoHSX*@
    .TheoHSX {
        background-color: forestgreen;
        text-align: center;
        padding: 10px;   
    }
</style>


